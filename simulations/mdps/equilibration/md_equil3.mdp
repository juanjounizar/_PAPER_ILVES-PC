title               = md_prod
cpp                 = /lib/cpp
define              = 

integrator          = md
dt                  = 0.002	; ps !
nsteps              = 100000	; total 200 ps.
nstcomm             = 1
nstxtcout           = 5000     ; each 10 ps.
xtc-precision       = 5000
nstxout             = 0     
nstvout             = 0
nstfout             = 0
nstlog              = 1000
nstenergy           = 1000

; Non-bonded Interactions
nstlist             = 10
ns_type             = grid
cutoff-scheme       = Verlet
rlist               = 1.2
coulombtype         = PME
rcoulomb            = 1.2
vdwtype             = cutoff
rvdw                = 1.2
vdw-modifier        = force-switch
fourierspacing      = 0.12
pme-order           = 4
ewald-rtol          = 1e-5

; Berendsen temperature coupling is on in two groups
Tcoupl              =  v-rescale 
tc-grps             =  Protein non-Protein
tau_t               =  0.1 0.1
ref_t               =  298 298
ld-seed             =  -1

; Energy monitoring
energygrps          =  Protein  non-Protein 
DispCorr            =  no

; Isotropic pressure coupling is now on
Pcoupl              =  Parrinello-Rahman 
Pcoupltype          =  isotropic
tau_p               =  2.0
compressibility     =  4.5e-5
ref_p               =  1.0

; Generate velocites is off at 298 K
continuation        =  yes
gen_vel             =  no
gen_temp            =  298
gen_seed            =  -1 

; Constraints
constraint_algorithm = shake
Shake-SOR            = no
shake-tol            = 0.0001
constraints          = h-bonds

